  <!-- Features Widget *************** -->

  <Features classes={{ container: 'pt-0 mt-0 -mt-40' }}>
    <Fragment slot="title">
      <span class="text-3xl font-semibold">Peer-Reviewed Journal Articles</span>
    </Fragment>

    <Fragment slot="subtitle">
      <div class="mt-8">
        {
          yearsDesc.map((year) => (
            <div class="mb-10">
              <h2 class="text-2xl font-semibold mb-4">{year}</h2>
              <div class="space-y-4 text-sm">
                {journalArticles
                  .filter((p) => p.year === year)
                  .map((p) => (
                    <p>
                      {p.text}
                      {p.url && (
                        <>
                          {' '}
                          <a href={p.url} target="_blank" class="underline text-blue-600">
                            {p.url}
                          </a>
                        </>
                      )}
                    </p>
                  ))}
              </div>
            </div>
          ))
        }

        <div class="mt-14">
          <h2 class="text-2xl font-semibold mb-4">Books &amp; Book Chapters</h2>
          <div class="space-y-4 text-sm">
            {bookChapters.map((b) => <p>{b.text}</p>)}
          </div>
        </div>
      </div>
    </Fragment>
  </Features>
</Layout>
