---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero>
    <Fragment slot="title"> Projects: KSHAP </Fragment>
    <Fragment slot="subtitle">
      <div style="display: flex; flex-direction: column; align-items: center; margin-top: 2rem;">
        <img
          src="/kshaplogo.png"
