    description: 'Department of Social Welfare',
  },
  {
    name: 'Ekaterina Baldina',
    description: 'Ph.D. student. Indiana University',
  },
  {
    name: 'Hyojung Seo',
    description: 'Korea Aerospace University',
  },
  {
    name: 'Hyunjeong Kwak',
    description: 'Ph.D. student. University of Maryland',
  },
  {
    name: 'Jin A Lee',
    description: 'Ph.D. student. University of Toronto',
  },
  {
    name: 'Jiwon Baek',
    description: 'Postdoc. Yonsei University, College of Nursing',
  },
  {
    name: 'Junsol Kim',
    description: 'Ph.D. student. University of Chicago',
  },
  {
    name: 'Keunbok Lee',
    description: 'Research fellow. Gyeonggi Research Institute, Future Society Research Division',
  },
  {
    name: 'Rira Song',
    description: 'Gyeonggido Women &amp; Family Foundation',
  },
  {
    name: 'Seungwon Lee',
    description: 'Ph.D. student. Columbia University',
  },
  {
    name: 'Seonghwan Gong',
    description: 'Kim & Chang (forensic team)',
  },
  {
    name: 'Wontak Joo',
    description: 'Assistant professor. Department of Sociology and Criminology & Law, University of Florida',
  },
  {
    name: 'Yeonjin Choi',
    description: "Master's Student. Korean Advanced Institute of Science & Technology",
  },
  {
    name: 'Yeojeen Kim',
  },
  {
    name: 'Youngjune Joo',
    description: 'Bar master. Bar Tilt, Sinchon, Seoul',
  },
