---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero>
    <Fragment slot="title"> Our Team </Fragment>
  </Hero>

  <!-- Lab Director ************************ -->

  <Features classes={{ container: 'pt-0 mt-0 -mt-16 lg:-mt-40' }}>
    <Fragment slot="title">
      <span class="text-3xl font-semibold">Lab Director</span>
    </Fragment>
    <Fragment slot="subtitle">
      <div class="mt-8">
        <div class="mt-8 flex gap-6 items-start">
          {
            labDirector.image ? (
              <img
                src={labDirector.image}
                alt={`${labDirector.name} photo`}
                width="256"
                loading="lazy"
                class="w-56 md:w-64 h-auto rounded-xl object-cover flex-shrink-0"
              />
            ) : null
          }

          <div class="min-w-0">
            <h2 class="text-2xl font-semibold mb-2">
              {labDirector.name}
              {labDirector.title ? <span class="font-normal">, {labDirector.title}</span> : null}
            </h2>

            {
              labDirector.metaLines && labDirector.metaLines.length ? (
                <div class="text-sm opacity-80 space-y-1">
                  {labDirector.metaLines.map((line) => (
                    <div>{line}</div>
                  ))}
                </div>
              ) : null
            }

            <div class="space-y-4 text-m">
              <p>{labDirector.bio}</p>
            </div>

            {
              labDirector.links && labDirector.links.length ? (
                <div class="mt-3 flex flex-wrap gap-x-4 gap-y-2 text-sm">
                  {labDirector.links.map((l) => (
                    <a
                      href={l.href}
                      target="_blank"
                      rel="noopener noreferrer"
                      class="underline underline-offset-4 hover:opacity-80"
                    >
                      {l.label}
                    </a>
                  ))}
                </div>
              ) : null
            }
          </div>
        </div>
      </div>
    </Fragment>
  </Features>

  <!-- Research Professors ***************** -->

  <Features classes={{ container: 'pt-0 mt-0 -mt-10' }}>
    <Fragment slot="title">
      <span class="text-3xl font-semibold">Research Professors</span>
    </Fragment>
    <Fragment slot="subtitle">
      <div class="mt-2">
        {
          people.researchProfessors.map((p) => (
            <div class="mt-8 flex gap-6 items-start">
              {p.image ? (
                <img
                  src={p.image}
                  alt={`${p.name} photo`}
                  width="256"
                  loading="lazy"
                  class="w-56 md:w-64 h-auto rounded-xl object-cover flex-shrink-0"
                />
              ) : null}

              <div class="min-w-0">
                <h2 class="text-2xl font-semibold mb-2">
                  {p.name}
                  {p.title ? <span class="font-normal">, {p.title}</span> : null}
                </h2>

                {p.metaLines.length ? (
                  <div class="text-sm opacity-80 space-y-1">
                    {p.metaLines.map((line) => (
                      <div>{line}</div>
                    ))}
                  </div>
                ) : null}

                <div class="space-y-4 text-m">
                  <p>{p.bio}</p>
                </div>

                {p.links && p.links.length ? (
                  <div class="mt-3 flex flex-wrap gap-x-4 gap-y-2 text-sm">
                    {p.links.map((l) => (
                      <a
                        href={l.href}
                        target="_blank"
                        rel="noopener noreferrer"
                        class="underline underline-offset-4 hover:opacity-80"
                      >
                        {l.label}
                      </a>
